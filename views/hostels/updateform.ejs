<% include ../partials/header.ejs %>

<div class = "ui main text container segment" style="margin-top: 3em;">
	<div class="ui huge header" align="center">Update Information</div>
	<form class ="ui form" action="/hostels/<%= x.block %>/student/<%= x._id %>?_method=PUT" method="POST">
		<div class="field">
			<label>Last Name</label>
			<input type="text" name="name" placeholder="last name" value=<%= x.name %> readonly>
		</div>
		<div class="field">
			<label>USN</label>
			<input type="text" name="usn" placeholder="usn" value=<%= x.owner.usn %> readonly>
		</div>
		<div class="field">
			<label>Year</label>
			<input type="text" name="year" placeholder="year" value=<%= x.year %> readonly>
		</div>
		<div class="field">
			<label>Department</label>
			<input type="text" name="department" placeholder="department" value=<%= x.department %> readonly>
		</div>
		<div class="field">
			<label>Block</label>
			<input type="text" name="block" placeholder="Block No" value=<%= x.block %> onkeyup="this.value = this.value.toUpperCase();">
		</div>
		<div class="field">
			<label>Preferred Room</label>
			<input type="number" name="proom" placeholder="room number" value=<%= x.proom %>>
		</div>
		<div class="field">
			<label>Email Address</label>
			<input type="email" name="email" placeholder="email address" value=<%= x.email %> readonly>
		</div>
		<div class="field">
			<label>Contact Number</label>
			<input type="number" name="contact" placeholder="contact number" value=<%= x.contact %> readonly>
		</div>
		
		
		<div align="center"><button class="ui primary button">UPDATE</button></div>
	</form>
</div>



<% include ../partials/footer.ejs %>
